<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>HorSys Markets</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <!-- Font Awesome -->
        <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css" />
        <!-- Ionicons -->
        <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
        <!-- overlayScrollbars -->
        <link rel="stylesheet" href="assets/css/adminlte.min.css" />
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet" />
    </head>
    <body class="hold-transition sidebar-mini">
        <!-- Site wrapper -->
        <div class="wrapper">
            <!-- Navbar -->
            <%- include ('../partials/header.ejs') %>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
            <%- include ('../partials/sidebar.ejs') %>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h7>Dashboard</h7>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-success elevation-1"
                                    ><i class="fas fa-poll"></i
                                ></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Market cap.</span>
                                    <span class="info-box-number"><small>$</small> <%=globalMarkets.marketCap %></span>
                                    <span class="info-box-number"><small>%</small> <%=globalMarkets.marketCapDiff24h %></span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                            <!-- /.info-box -->
                        </div>
                        <!-- /.col -->
                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-info elevation-1"
                                    ><i class="fas fa-piggy-bank"></i
                                ></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Total Tvl</span>
                                    <span class="info-box-number"><small>$</small> <%=globalMarkets.totalValueLocked %></span>
                                    <span class="info-box-number"><small>%</small> <%=globalMarkets.totalValueLockedDiff24h %></span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                            <!-- /.info-box -->
                        </div>
                        <!-- /.col -->
                        <!-- fix for small devices only -->
                        <div class="clearfix hidden-md-up"></div>

                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="info-box mb-3">
                                <span class="info-box-icon bg-warning elevation-1">
                                    <i class="fas fa-balance-scale-right"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text"><%=globalMarkets.dominanceCoin.name %> Dominance (%)</span>
                                    <span class="info-box-number"><small>%</small> <%=globalMarkets.dominance %> </span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                            <!-- /.info-box -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Tvl Rankings</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body table-responsive p-0" style="height: 400px">
                                    <table class="table table-head-fixed text-nowrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Code</th>
                                                <th>Name</th>
                                                <th>Change24H</th>
                                                <th>Tvl</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% defiMarkets.forEach(function (defiMarket, i) { %>
                                            <tr>
                                                <td><%=i + 1 %></td>
                                                <td><%=defiMarket.coin.code %></td>
                                                <td><%=defiMarket.coin.name %></td>
                                                <td><small>%</small>  <%=defiMarket.totalValueLockedDiff24h %></td>
                                                <td><small>$</small>  <%=defiMarket.totalValueLocked %></td>
                                            </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                    <!-- /.row -->
                </section>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
        </div>
        <!-- ./wrapper -->

        <!-- jQuery -->
        <script src="plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="assets/js/adminlte.min.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="assets/js/app.js"></script>
    </body>
</html>
